import json
def reply():
    filename = 'C:\\Users\\family\Desktop\python\\number.json'
    with open(filename) as fil_obj:
        try:
            numb = json.load(fil_obj)
            print(numb)
        except ValueError:
            number = int(input('Введите ваше лбимое число: '))
            with open(filename, 'w') as fil_obj:
                json.dump(number, fil_obj)
                print('Мы запомнили ваше число ' + str(number))


reply()

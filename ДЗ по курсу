import math

x1 = float(input('введите координаты x1 :'))
y1 = float(input('введите координаты y1 :'))
x2 = float(input('введите координаты x2 :'))
y2 = float(input('введите координаты y2 :'))

dot1 = (x2-x1)**2
dot2 = (y2-y1)**2
print(round(math.sqrt(dot1+dot2),4))



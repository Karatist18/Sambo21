def whos_first(p1, p2):
    # ваше решение
    diff = p1.find('B') - p2.find('B')
    
    if diff > 0:
        return 'p2'
    elif diff < 0:
        return 'p1'
    else:
        return 'tie'
        
        
 class Beverage:
    def __init__(self, ingr):
        self.ingridients = ingr
        self.prices = {"Strawberries" : 1.5, "Banana" : 0.5, "Mango" : 2.5,
		"Blueberries" : 1, "Raspberries" : 1, "Apple" : 1.75,
		"Pineapple" : 3.5}

    def get_cost(self):
        self.a = [v for k,v in self.prices.items() if k in self.ingridients]
        return sum(self.a)
    def get_price(self):
        return sum(self.a) * 2.5
    def get_name(self):
        c = 0
        for i in self.ingridients:
            c += 1
        if c > 1:
            return r'{self.ingridients} + Fusion'
        else:
            return self.ingridients

class Beverage():
    def __init__(self, ingr):
        self.ingredients = ingr
        self.prices = {"Strawberries" : 1.5, "Banana" : 0.5, "Mango" : 2.5,
		"Blueberries" : 1, "Raspberries" : 1, "Apple" : 1.75,
		"Pineapple" : 3.5}
        self.cost = sum([v for k,v in self.prices.items() if k in self.ingredients])
        self.price = self.cost * 2.5
    def get_cost(self):
        return f'$ {self.cost:.2f}'
    def get_price(self):
        return f'$ {self.price:.2f}'
    def get_name(self):
        lst = sorted([i.replace('ies', 'y') for i in self.ingredients])
        return f'{" ".join(lst)} {"Fusion" if len(lst) >1 else "Smoothie"}'

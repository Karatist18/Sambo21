class Users():

    def __init__(self, first_name, last_name):
        self.first_name = first_name
        self.last_name = last_name
    def discribe(self):
        print('Первый пользователь нашей системы: ' + self.first_name.title() + ' ' + self.last_name.title() + '!')

user = Users('pavel', 'zaharov')
user.discribe()
